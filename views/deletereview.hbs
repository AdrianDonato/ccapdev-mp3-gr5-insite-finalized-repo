<html>
    <head>
        <title>Delete review | InSite</title>
        <script src="/jquery.js"></script>
        <link rel="stylesheet" href="/stylesheets/mainpage.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
        <link rel="icon" type="image/png" size="32x32" href="/images/insite-icon-v3-32x32.png">
    </head>
    <body>
        <nav class = "navbar navbar-expand-md navbar-dark bg-dark sticky-top">
            <div class = "container-fluid">
                <a class="navbar-brand" href="/"><img src = "/images/navbar-logo-micro-v3.png"></a>
                
            <form class = "form-inline d-flex my-2 my-lg-0 justify-content-center md-form long-textbar" method="get" action="/websites/search-results">
                    <div class="lg-form my-0">
                        <input class="form-control form-control-md ml-3 long-textbar" name = "search" type="text" placeholder ="search for websites..." aria-label="search">
                        <button href = "/websites/search-results" class="btn btn-outline-light btn-md my-0 ml-sm-2">SEARCH</button>
                    </div>
                </form>
                <!--
                <div class = "col-xl-2">
                        <select id = "topCateg">
                        <option>All Categories</option>
                        <option>Social Media</option>
                        <option>E-Commerce</option>
                        <option>News Sites</option>
                        <option>Blogs</option>
                        <option>Informational</option> 
                        <option>Entertainment</option> 
                        </select>
                </div> -->
                
                
                <ul class="navbar-nav">
                    <li class = "nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true"
                           aria-expanded="false">
                            VIEW WEBSITES
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/categories/allcategories">All Websites</a></li>
                            <li><a class="dropdown-item" href="/categories/socialmedia">Social Media</a></li>
                            <li><a class="dropdown-item" href="/categories/ecommerce">E-Commerce</a></li>
                            <li><a class="dropdown-item" href="/categories/newssites">News Sites</a></li>
                            <li><a class="dropdown-item" href="/categories/blogs">Blogs/Focus Sites</a></li>
                            <li><a class="dropdown-item" href="/categories/informational">Informational</a></li>
                            <li><a class="dropdown-item" href="/categories/entertainment">Entertainment</a></li>
                            <li><a class="dropdown-item" href="/categories/utilities">Utilities</a></li>
                        </ul>
                    </li>
                    <li class = "nav-item">
                        <a class = "nav-link" href="/websites/submitsite">SUBMIT A WEBSITE</a>
                    </li>
                    <!-- rightoption1: either sign up or account, rightoption2: either log in or log out -->
                     <li class = "nav-item dropdown">
                        {{#if loggedin}}
                        <a class="nav-link dropdown-toggle" href="" id="profileDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                           {{rightoption1}}
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="profileDropdown">
                            <li><a class="dropdown-item" href="{{url1}}">View Profile</a></li>
                            {{#if modurl}}
                            <li><a class="dropdown-item" href="{{modurl}}">{{userRole}} Panel</a></li>
                            {{/if}}
                        </ul>
                        {{else}}
                            <a class = "nav-link" href="{{url1}}">{{rightoption1}}</a>
                        {{/if}}
                    </li>
                    <li class = "nav-item">
                        <a class = "nav-link" href="{{url2}}">{{rightoption2}}</a>
                    </li>
                </ul>
            </div>
        </nav>
                <div class = "col-lg-12 col-md-12 col-sm-12">
                    Delete Review?
                </div>
                
                <div class="card border border-secondary mx-auto" style="width: 75%;">
                    <div class="col-lg-12 col-md-12">
                        <div class="card-horizontal">
                            <div class="img-square-wrapper pt-5">
                                <img class="review-profile-pic img-rounded" src= "{{delreview.usericon}}" alt="Card image cap">
                                <h6 class="card-text pb-3 text-center">{{delreview.username}}</h6>
                            </div>
                            
                            <div class="card-body">
                                <div class="row">
                                <div class="col-sm-3"> 
                                <div class="text-center ml-5" style="margin-top: 50%;">
                                <div class="card bg-light text-center mx-auto border border-dark" style="width:110px; height:70px;">
                                <span class="font-weight-bold p-0"><p class="bg-dark text-white">Overall </p></span>
                                <span class="text-center"><h6 >{{delreview.overallscore}}</h6></span>
                                </div>
                                </div>
                                </div>
                                <div class="col">
                               
                            <div class="row ml-5">
                            
                            <div class="col text-center">
                                <div class="card bg-dark text-white" style="width:110px; height:50px;">
                                <span class="font-weight-light p-0">Design <br></span>
                                <span class="text-white">{{delreview.designscore}}</span>
                                </div>
                            </div>
                            <div class="col text-center">
                                <div class="card bg-dark text-white" style="width:110px; height:50px;">
                                <span class="font-weight-light p-0">Usability <br></span>
                                <span class="text-white">{{delreview.usabilityscore}}</span>
                                </div>
                            </div>
                            <div class="col text-center">
                                <div class="card bg-dark text-white" style="width:110px; height:50px;">
                                <span class="font-weight-light p-0">Creativity <br></span>
                                <span class="text-white">{{delreview.creativityscore}}</span>
                                </div>
                            </div>
                            <div class="col text-center">
                                <div class="card bg-dark text-white" style="width:110px; height:50px;">
                                <span class="font-weight-light p-0">Content <br></span>
                                <span class="text-white">{{delreview.contentscore}}</span>
                                </div>
                            </div>
                            <div class="col text-center">
                                <div class="card bg-dark text-white" style="width:110px; height:50px;">
                                <span class="font-weight-light p-0">Trustworthiness <br></span>
                                <span class="text-white">{{delreview.trustscore}}</span>
                                </div>
                            </div>
                            </div>
                                </div>
                                <div class="col">
                                <h6 class="font-weight-bold text-center">Comments</h6>
                                <div class="card bg-dark" style="padding: 50px;">
                                <p class="card-text text-center text-white">{{delreview.review}}</p>
                                </div>
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
                <form method="post" action="/websites/websitelist/{{webdelete._id}}/review/delete/{{delreview.username}}/submit">
                    <div class = "col-lg-12 col-md-12 col-sm-12 pt-3 pb-3">
                        <input type="hidden" class="form-control" name="websitename" value="{{webdelete.websitename}}">
                        <button type="submit" value="delete" class="btn btn-success btn-md">Delete Review</button>
                    </div>
                </form>
        <nav class = "footer navbar navbar-expand-md navbar-dark bg-dark mt-5">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/about">ABOUT</a>
                    </li>
                </ul>
            </div>
        </nav>
    </body>
</html>