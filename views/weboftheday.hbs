        <!--- image jumbotron? 
                put ratings here?-->
        <div class="row no-gutter">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="carousel inner">
                    <div class="carousel-item active">
                        <img src="{{site.banner}}" class="img-responsive webheader-jumbotron-image">
                        <div class="carousel-caption">
                            
                        </div>
                    </div>
                </div>
            </div>    
        </div> 
        <!--- website summary container -->
        <div class="card-box w-75 mx-auto pt-3 pb-3">
            <div class="row no-gutters mx-auto">
                
                <div class="col-auto">
                    <img class="webheader-image" src="{{site.icon}}">
                </div>   
                <div class="col">
                    <div class="card-block px-5">
                        <h1 class="card-title font-weight-light">{{site.websitename}}</h1>
                        <div class="taglist"> 
                            {{#each site.tags}}
                                <span class="badge badge-pill badge-primary font-weight-light">{{this}}</span>
                            {{/each}}
                        </div><br>
                        <p class="card-text upperlabel">{{site.creator}}</p>
                        <div class="text-right">
                        <a href="{{site.websiteurl}}" class="btn btn-success btn-sm">Visit Webite</a>
                        
                        </div>
                    </div>
                </div>

                <!-- set web of thr day -->
                 <div class="col text-center">
                     <h4>Set as Website of the Day?</h4>
                  <form method="post" action = "/websites//weboftheday/{{site.id}}/submit">
                    <input type="submit" class="btn btn-success btn-md"value="Apply Changes">
                </form>
                </div>
                <!-- -->
            </div>
        </div>

        <div class="container">
            <nav>
                <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                      <a class="nav-item nav-link active" id="nav-oview-tab" data-toggle="tab" href="#nav-oview" role="tab" aria-controls="nav-home" aria-selected="true">Overview</a>
                      <a class="nav-item nav-link" id="nav-flist-tab" data-toggle="tab" href="#nav-flist" role="tab" aria-controls="nav-profile" aria-selected="false">Feature List</a>
                      <a class="nav-item nav-link" id="nav-imgGal-tab" data-toggle="tab" href="#nav-imgGal" role="tab" aria-controls="nav-contact" aria-selected="false">Image Gallery</a>
                      <a class="nav-item nav-link" id="nav-rlist-tab" data-toggle="tab" href="#nav-rlist" role="tab" aria-controls="nav-about" aria-selected="false">Reviews</a>
                    </div>
            </nav>

            <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-oview" role="tabpanel" aria-labelledby="nav-oview-tab">
                    <div class="row web-desc">
                    <div class = "col-lg-12 col-md-12 col-sm-12">
                    <h1 class="display-4 text-center">Overview</h1>
                    </div>
                    <div class = "col-lg-12 col-md-12 col-sm-12">
                    <div class="card border border-light bg-dark text-white mx-auto w-50" style="height: 150px;">
                    <p class="text-center">{{site.website_desc}}</p>
                    </div>
                    </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="nav-flist" role="tabpanel" aria-labelledby="nav-flist-tab">
                    <div class="row web-desc">
                    <div class = "col-lg-12 col-md-12 col-sm-12">
                    <h1 class="display-4 text-center">Feature List</h1>
                    </div>
                    <div class = "col-lg-12 col-md12 col-sm-12 d-flex">
                    <div class="card bg-dark text-white mx-auto w-25" style="padding-bottom: 50px;">
                    <ul class="list-inline mx-auto justify-content-center">
                        {{#each site.feature_list}}
                            <li>{{this}}</li>
                        {{/each}}
                    </ul>
                    </div>
                    </div>
                    </div>
                </div>
               <div class="tab-pane fade" id="nav-imgGal" role="tabpanel" aria-labelledby="nav-imgGal-tab">
                    <!--- image gallery tab -->
                    <div class="row web-desc">
                        <div class = "col-lg-12 col-md-12 col-sm-12">
                            <h1 class="display-4 text-center" class="">Image Gallery</h1>
                        </div>
                        <div class = "col-lg-12 col-md-12 col-sm-12 d-flex justify-content-center">
                            <div id="web-image-gallery-carousel" class="carousel slide" data-ride="carousel">
                            {{!-- <div class="carousel-inner">
                            <div class="carousel-item active">
                            <img src="/images/coffee-test1.jpg" class="d-block img-responsive center-block webdesc-gallery-image" alt="...">
                            </div>
                            <div class="carousel-item">
                            <img src="/images/coffee-test2.jpg" class="d-block img-responsive center-block webdesc-gallery-image" alt="...">
                            </div>
                            <div class="carousel-item">
                            <img src="/images/coffee-test3.jpg" class="d-block img-responsive center-block webdesc-gallery-image" alt="...">
                            </div> --}}
                            <div class="carousel-inner">
                            {{#with site}}
                                {{#each gallery}}
                                <div class="carousel-item active">
                                    <img src="{{this}}" class="d-block img-responsive center-block webdesc-gallery-image" alt="...">
                                </div>
                                {{/each}}
                            {{/with}}
                            </div>
                            <a class="carousel-control-prev" href="#web-image-gallery-carousel" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#web-image-gallery-carousel" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                            </a>
                            </div>
                        </div>
                    </div>
                </div>
                
        <div class="tab-pane fade" id="nav-rlist" role="tabpanel" aria-labelledby="nav-rlist-tab">       
        <!--- reviews -->
        <div class="row web-desc">
            <div class = "col-lg-12 col-md-12 col-sm-12">
                <h1 class="display-4 text-center">Reviews</h1>
            </div>
            <div class = "col-lg-12 col-md-12 col-sm-12">
                <h3 class="text-center font-weight-light">Overall Rating</h3>
            </div>

            <div class = "col-lg-12 col-md-12 col-sm-12 pb-3">
                <div class="card bg-light text-center mx-auto border border-dark" style="width: 160px; height: 110px;">
                   <div class="pt-0">
                    <span class="font-weight-bold pt-2"><h3 class="bg-dark text-white">Overall </h3></span>
                   <span class="display-4">{{site.overall_score}}</span>
                   </div>
                </div>
            </div>
            
            <div class = "col-lg-12 col-md-12 col-sm-12 d-flex">
