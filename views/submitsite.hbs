        <h2 class="display-4 text-center pt-4">Submit a Website</h2>
        <div class = "site-form rounded border border-secondary p-4">
        <div class="hint-text text-center bg-dark text-white">Make the website known.</div>
        <div class="text-center">
            {{#if error}}
            {{error}}
            {{/if}}       
        </div>
        <form method="post" action="/websites/submitsite/submit" enctype="multipart/form-data">
        <div class="form-group" >
            <label for = "webImg" class="font-weight-bold">Website Icon</label>
        	<input type="file" class="form-control" name="webImg" placeholder="Website Icons" required="required">
        </div>
        <div class="form-group">
            <label for = "site" class="font-weight-bold">Website Name</label>
        	<input type="text" class="form-control" name="site" placeholder="Website Name" required="required">
        </div>
        <div class="form-group">
            <span><label class="form-check-label" for="useriscreator" class="font-weight-bold" style="margin-right: 10px;">Are you the Creator of this Website?</label></span> 
            <span style="margin-left:30px;"><input class="form-check-input" type="checkbox" name="useriscreator" value="true"></span>  
        </div>
        <div class="form-group">
		<div class="row">
				<div class="col" id="creator">
                    <label for = "creator" class="font-weight-bold">Creator</label>
                    <input type="text" class="form-control" name="creator" placeholder="Creator">
                </div>
				<div class="col">
                <label for = "category" class="font-weight-bold">Category</label>
                <select name = "category" class="form-control">
                    <option value = "Social Media">Social Media</option>
                    <option value = "E-Commerce">E-Commerce</option>
                    <option value = "News Sites">News Sites</option>
                    <option value = "Blogs">Blogs</option>
                    <option value = "Informational">Informational</option> 
                    <option value = "Entertainment">Entertainment</option>
                    <option value = "Utilities">Utilities</option> 
                </select>
                </div>
		</div>        	
        </div>
		<div class="form-group">
            <label for = "link" class="font-weight-bold">Website URL</label>
            <input type="url" class="form-control" name="link" placeholder="Website URL" required="required">
        </div>
        <div class="form-group">
            <label for = "tags" class="font-weight-bold">Tags - <span class="text-muted">Separate each with a comma (,)</span></label>
            <input type="text" class="form-control" value="" data-role="tagsinput" name="tags" required="required">
        </div>      
         <div class="form-group">
            <label for = "featurelist" class="font-weight-bold">Features - <span class="text-muted">Separate each with a comma (,)</span></label>
            <input type="text" class="form-control" value="" data-role="featuresinput" name="featurelist" required="required">
        </div>
        <div class="form-group" >
            <label for = "webBanner" class="font-weight-bold">Website Banner - <span class="text-muted">Choose the picture the visitors will first see on this page.</span></label>
        	<input type="file" class="form-control" name="webBanner" placeholder="Website Banner" required="required">
        </div>
        <div class="form-group">
            <label for = "imgsGal" class="font-weight-bold">Image Gallery - <span class="text-muted">Max of 3 Images</span></label>
            <input type="file" class="form-control" value="" name="imgsGal" placeholder="Image Gallery" multiple>
        </div>      
        <div class="form-group  text-center">
            <label for = "desc" class="font-weight-bold">Description</label>
            <textarea name = "desc" class="form-control h-25"></textarea>
        </div> 
		<div class="form-group text-center">
            <button type="submit" value="register" class="btn btn-primary btn-lg btn-circle">Submit</button>
        </div>
    </form>
    </div>
        <nav class = "footer navbar navbar-expand-md navbar-dark bg-dark mt-5">
